/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16],inc, load, reset;
    OUT out[16];
    
    PARTS:
    Mux16(a=incr1 , b=in , sel=load , out=loa );
    Inc16(in=incr , out=incr1 );
    Mux16(a=loa , b=false , sel=reset , out=res );
    Or(a=reset , b=load , out=on );
    Or(a=on , b=inc , out=onit );
    Register(in=res , load=onit , out=incr, out=out );
}
